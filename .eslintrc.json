{
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
        "linebreak-style": 0,
        "react/prop-types": ["error", { "ignore": ["navigation"] }],
        "global-require": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "eslint linebreak-style": [
            0,
            "error",
            "windows"
        ]
    }
}